{
  "compilerOptions": {

    "target": "es2017",                                
    "module": "commonjs",                           
    "lib": ["ES6"],                                  
    "allowJs": true,                             
    "removeComments": true,                      
    "strict": false,                 
    "typeRoots": [
			"./node_modules/@types",
			"./src/@types"
		],               
    "esModuleInterop": true,                       
		"resolveJsonModule": true,
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true        
  }
}
